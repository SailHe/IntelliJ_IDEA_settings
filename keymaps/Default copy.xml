<keymap version="1" name="Default copy" parent="$default">
  <action id="CodeCompletion">
    <keyboard-shortcut first-keystroke="ctrl semicolon" />
    <keyboard-shortcut first-keystroke="ctrl s" />
  </action>
  <action id="NewClass">
    <keyboard-shortcut first-keystroke="alt n" />
  </action>
  <action id="OpenFile">
    <keyboard-shortcut first-keystroke="shift ctrl alt o" />
  </action>
  <action id="SaveAll">
    <keyboard-shortcut first-keystroke="shift ctrl s" />
  </action>
</keymap>